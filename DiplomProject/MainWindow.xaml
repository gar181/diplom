<Window x:Class="DiplomProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomProject"
        mc:Ignorable="d"
        Icon="/Images/logo.ico"
        Title="Авторизация" Height="450" Width="800" MinHeight="400" MinWidth="700" Background="#F5F5F5" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="36" Foreground="#1F2937" Grid.Column="1" Grid.RowSpan="2" Margin="0,20,0,0"/>
        <TextBlock Text="Логин" FontSize="22" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="25,0,0,5" Foreground="#1F2937"/>
        <TextBox x:Name="login_txb" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="0,0,0,20"/>
        <TextBlock Text="Логин" FontSize="22" Grid.Row="3" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="25,0,0,5" Foreground="#1F2937"/>
        <PasswordBox x:Name="password_txb" VerticalContentAlignment="Center" Grid.Row="4" Grid.Column="1" Margin="0,0,0,20"/>
        <Button Content="Войти" FontSize="22" Grid.Column="1" Grid.Row="5" Grid.RowSpan="2" Height="50" Margin="50,0,50,25" Foreground="#1F2937" Click="Button_Click"/>
    </Grid>
</Window>
