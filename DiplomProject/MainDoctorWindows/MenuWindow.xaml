<Window x:Class="DiplomProject.MainDoctorWindows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomProject.MainDoctorWindows"
        mc:Ignorable="d"
        Icon="/Images/logo.ico"
         Title="Главный врач - Меню" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Выйти" FontSize="22" Margin="600,20,30,20" Click="Button_Click_1"/>
        <Button Content="Просмотр графика работы" FontSize="22" Grid.Row="1" Margin="200,20" Click="Button_Click_2"/>
        <Button Content="Отчёты" FontSize="22" Grid.Row="2" Margin="200,20" Click="Button_Click_3"/>
        <Button Content="Управление сотрудниками" FontSize="22" Grid.Row="3" Margin="200,20" Click="Button_Click"/>
    </Grid>
</Window>
