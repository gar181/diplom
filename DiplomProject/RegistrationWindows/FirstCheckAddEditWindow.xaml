<Window x:Class="DiplomProject.RegistrationWindows.FirstCheckAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomProject.RegistrationWindows"
        mc:Ignorable="d"
            Title="Регистратура - Запись на приём" Height="800" Width="600" WindowStartupLocation="CenterScreen">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Content="Назад" Width="175" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,20,0" FontSize="22" Grid.Column="1" Click="Button_Click"/>
            <TextBlock Text="Запись на приём" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>

        
            <TextBlock Text="id:" FontSize="22" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <TextBox Name="id_txb"  FontSize="22" Grid.Row="2" Grid.Column="1" Height="40" Margin="10,10" Focusable="False"/>

            <TextBlock Text="Сотрудник:" FontSize="22" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <ComboBox  Name="employee_cmb" FontSize="22" Grid.Row="3" Grid.Column="1" Height="40" Margin="10,10"/>

            <TextBlock Text="Пациент:" FontSize="22" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <ComboBox Name="patient_cmb"  FontSize="22" Grid.Row="4" Grid.Column="1" Height="40" Margin="10,10"/>

            <TextBlock Text="Комната:" FontSize="22" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <ComboBox Name="room_cmb"  FontSize="22" Grid.Row="5" Grid.Column="1" Height="40" Margin="10,10"/>

            <TextBlock Text="Дата:" FontSize="22" Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <DatePicker Name="date_dp"  FontSize="22" Grid.Row="6" Grid.Column="1" Height="40" Margin="10,10"/>

            <TextBlock Text="Давление:" FontSize="22" Grid.Row="7" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <TextBox Name="pressure_txb"  FontSize="22" Grid.Row="7" Grid.Column="1" Height="40" Margin="10,10"/>

            <TextBlock Text="Пульс:" FontSize="22" Grid.Row="8" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <TextBox Name="pulse_txb"  FontSize="22" Grid.Row="8" Grid.Column="1" Height="40" Margin="10,10"/>

            <TextBlock Text="Комментарий:" FontSize="22" Grid.Row="9" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
            <TextBox Name="comment_txb"  FontSize="22" Grid.Row="9" Grid.Column="1" Height="40" Margin="10,10"/>

            <Button Content="Готово" Grid.Row="10" Grid.ColumnSpan="2" FontSize="22"  Margin="175,10" Click="Button_Click_1"/>
        </Grid>
    </Window>
